{
  "name": "bananas",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "dune build -p <PACKAGE_NAME>",
    "buildDev": "pesy",
    "release": { "releasedBinaries": [ "BananasApp.exe" ] }
  },
  "buildDirs": {
    "test": {
      "require": [ "bananas.lib" ],
      "main": "TestBananas",
      "name": "TestBananas.exe"
    },
    "library": { "name": "bananas.lib", "namespace": "Bananas" },
    "executable": {
      "require": [ "bananas.lib" ],
      "main": "BananasApp",
      "name": "BananasApp.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestBananas.exe"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/dune": ">=1.6.0",
    "@reason-native/rely": "^3.1.0",
    "ocaml": "^4.4.0"
  },
  "devDependencies": {
    "ocaml": "4.7.1004",
    "refmterr": "*",
    "pesy": "*",
    "@opam/merlin": "*"
  }
}